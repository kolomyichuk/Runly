<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- TODO It looks like you currently don't need dataExtractionRules and fullBackupContent attributes-->
    <!-- TODO data_extraction_rules.xml and backup_rules.xml files are empty, so you can remove them-->
    <!-- TODO Also, you can set allowBackup attribute to false-->
    <!-- TODO More about data backup - https://developer.android.com/identity/data/backup-->
    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_runly"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_runly"
        android:theme="@style/Theme.Runly">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Runly">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${GOOGLE_MAP_API_KEY}" />
        <service
            android:name=".service.RunTrackingService"
            android:exported="false"
            android:foregroundServiceType="location" />
    </application>
</manifest>